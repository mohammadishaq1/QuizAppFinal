@model QuizApp.Models.Category

@{
    ViewBag.Title = "addCategory";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>addCategory</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Category_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Category_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Category_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}



<div style="overflow:scroll">
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>ID</th>
                <th>Category Name</th>
                <th>View All questions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewData["listOfCategory"] as List<QuizApp.Models.Category>)
            {
                <tr>
                    <td>@item.Category_Id</td>
                    <td>@item.Category_Name</td>

                    <td><a class="btn btn-info" href="@Url.Action("ViewQuestion", "Dashboard", new { id=item.Category_Id})">View questions</a></td>
                </tr>
            }

        </tbody>
    </table>
</div>

